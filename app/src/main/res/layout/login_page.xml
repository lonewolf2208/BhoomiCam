<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farmer_picture_new_2">

     <androidx.appcompat.widget.Toolbar
         android:id="@+id/toolbar_"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/dark_green">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Regester yourself"
               android:textColor="@color/black"
               android:textSize="16dp"
           />

     </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp">

    <RelativeLayout
        android:id="@+id/whole_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/white_transparent">


        <!--      name -->
        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text_view"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your name"
            android:textSize="15dp" />


        <!--         select your district -->
        <TextView
            android:id="@+id/distric_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_id"
            android:layout_marginTop="20dp"
            android:text="District"
            android:textColor="@color/black"
            android:textSize="13dp"
        />

        <EditText
            android:id="@+id/district_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/distric_text_view"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your district"
            android:textSize="15dp"
        />


        <!--          village-->

        <TextView
            android:id="@+id/village_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/district_edit_text"
            android:layout_marginTop="20dp"
            android:text="Village"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/village_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/village_text_view"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your village"
            android:textSize="15dp" />


        <!--          // state -->
        <TextView
            android:id="@+id/state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/village_edit_text"
            android:layout_marginTop="20dp"
            android:text="State"
            android:textColor="@color/black"
            android:textSize="13dp"
        />

        <EditText
            android:id="@+id/state_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/state_text_view"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your state"
            android:textSize="15dp"
        />


        <!--          // mobile number-->
        <TextView
            android:id="@+id/mobile_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/state_edit_text"
            android:layout_marginTop="20dp"
            android:text="Mobile number"
            android:textColor="@color/black"
            android:textSize="13dp"
        />

        <EditText
            android:id="@+id/number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile_number_text_view"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your mobile number"
            android:textSize="15dp"
            android:textColor="@color/black"
        />

<!--      adhar card number -->

        <TextView
            android:id="@+id/adhar_card_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_edit_text"
            android:layout_marginTop="20dp"
            android:text="Adhar card number"
            android:textColor="@color/black"
            android:textSize="13dp"
        />

        <EditText
            android:id="@+id/adhar_card_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adhar_card_"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your Adhar card number"
            android:textSize="15dp"
            android:textColor="@color/black"
        />


<!--        // khasra number-->
         <TextView
             android:id="@+id/kharsra_number"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Kharsra number"
             android:textColor="@color/black"
             android:textStyle="normal"
             android:layout_below="@id/adhar_card_number_edit_text"
             android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/khasra_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kharsra_number"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:hint="Enter your khasra number"
            android:textSize="15dp"
            android:textColor="@color/black"
            />



        <ImageView
            android:id="@+id/take_photo_"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/camera"
            android:layout_below="@id/khasra_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take my photo"
            android:layout_below="@id/take_photo_"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
        />

        <!--        // button for next-->
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:layout_alignParentRight="true"
            android:layout_below="@id/take_photo_"
        />

    </RelativeLayout>

</ScrollView>

</RelativeLayout>